<%- include("partials/header.ejs")%>

<body>

    <h2>Edit Post</h2>
    
    <form action="/edit/<%= post.id %>" method="POST" style="padding: 20px;">
         
    <!-- Categories --> 
        <label for="category">Category:</label>
        <select class="form-select" aria-label="Default select example" name="category" id="category">
            <option value="Tech" <%= post.category === 'Tech' ? 'selected' : '' %>>Tech</option>
            <option value="Lifestyle" <%= post.category === 'Lifestyle' ? 'selected' : '' %>>Lifestyle</option>
            <option value="Health" <%= post.category === 'Health' ? 'selected' : '' %>>Health</option>
            <option value="Beauty" <%= post.category === 'Beauty' ? 'selected' : '' %>>Beauty</option>
        </select>
     
 <!-- Title -->
 <label for="title">Title</label>
 <textarea name="title" id="title" rows="2" cols="50" maxlength="100"><%= post.title %></textarea>
 <br>
 <!-- Content -->
 <label for="content">Content</label>
 <textarea name="content" id="content" rows="4" cols="50" required><%= post.content %></textarea>
 <br>
 <button type="submit">Submit Post</button>
</form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <%- include("partials/footer.ejs")%>
</body>
</html>