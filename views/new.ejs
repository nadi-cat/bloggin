<%- include("partials/header.ejs")%>

<body>

    <h2>Create a New Post</h2>

        <form action="/create" onsubmit="" method="POST" style="padding: 20px;">
            <!-- Categories -->
            <select class="form-select" aria-label="Default select example" name="postCategory" id="postCategory" required>
                <option selected>Select a category</option>
                <option value="Tech">Tech</option>
                <option value="Lifestyle">Lifestyle</option>
                <option value="Travel">Travel</option>
                <option value="Beauty">Beauty</option>
            </select>

             <!-- Picture Category -->
             <select class="form-select" aria-label="Default select example" name="postImg" id="postImg" required>
                <option value="">Select a image</option>
                <option value="beach">Beach</option>
                <option value="sea">Sea</option>
                <option value="trees">Trees</option>
                <option value="buildings">Building</option>
                <option value="butterfly">Butterfly</option>
                <option value="house">House</option>
                <option value="sunset">Sunset</option>
                <option value="water">Water</option>
                <option value="winter">Winter</option>
                <option value="tech">Tech</option>
                <option value="lifestyle">Lifestyle</option>
                <option value="mountain">Mountain</option>
                <option value="flower-field">Flowers</option>
            </select>
            
            <!-- Title -->
            <label for="postTitle">Title</label>
            <textarea name="postTitle" id="postTitle" rows="2" cols="50" maxlength="100"></textarea>
            <br>
            <!-- Content -->
            <label for="postContent">Content</label>
            <textarea name="postContent" id="postContent" rows="4" cols="50" required></textarea>
            <br>
            <button type="submit">Submit Post</button>
            
            
        </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <%- include("partials/footer.ejs")%>
</body>

</html>